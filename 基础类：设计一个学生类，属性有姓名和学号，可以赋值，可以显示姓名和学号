# include <iostream>
# include <string>
# include <Ctime>
using namespace std;

//设计一个学生类，属性有姓名和学号，可以赋值，可以显示姓名和学号
class Student {
public: //公共权限

	//属性:姓名和学号
	string m_Name;
	int m_Id;
	//行为:可以显示姓名和学号
	void showStudent() {
		cout << "姓名：" << m_Name << " 学号：" << m_Id << endl;
	}
};
int main() {
	//创建一个具体学生，实例化对象
	Student s1;
	//给s1对象进行属性赋值操作
	s1.m_Name = "张三";
	s1.m_Id = 231;
	//显示学生信息
	s1.showStudent();
	return 0;
}
